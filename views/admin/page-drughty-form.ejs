<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default" data-assets-path="../assets/"
  data-template="vertical-menu-template-free">
<%-include('../html/head.ejs'); %>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%-include('./menu.ejs'); %>
          <!-- / Menu -->

          <!-- Layout container -->
          <div class="layout-page">

            <!-- Navbar -->
            <%-include('./nav.ejs'); %>
              <!-- / Navbar -->

              <!-- Content wrapper -->
              <div class="content-wrapper">


                <!-- Content -->
                <div class="container-xxl flex-grow-1 container-p-y">
                  <div>
                    <h4 class="fw-bold "><span class="text-muted fw-light">Tables /
                      </span>ฟอร์มกรอกข้อมูลแพ้ยา</h4>
                      
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" style="margin-left: 85%; margin-bottom: 3%;">ค้นหาข้อมูลผู้ป่วย</button>
                  </div>
                  <div class="card mb-4">
                    <div class="card-body">
                    
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname"style="font-size: medium; font-weight: bold;">รหัสผู้ป่วย</label>
                        <input type="text" class="form-control" id="basic-default-fullname" placeholder="รหัสผู้ป่วย ..." disabled/>
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname" style="font-size: medium; font-weight: bold;">ชื่อ-นามสกุล</label>
                        <input type="text" class="form-control" id="basic-default-fullname" placeholder="ชื่อ-นามสกุล ..." disabled/>
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname" style="font-size: medium; font-weight: bold;">ID ยา</label>
                        <input type="text" class="form-control" id="basic-default-fullname" placeholder="ID ยา ..." disabled/>
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname" style="font-size: medium; font-weight: bold;">ชื่อยา</label>
                        <input type="text" class="form-control" id="basic-default-fullname" placeholder="ชื่อยา ..." />
                      </div>
                      
                      <button type="submit" class="btn btn-primary">ยืนยัน</button>

                    </div>
                  </div>
                </div>
                <!-- / Content -->

                <div class="content-backdrop fade"></div>
              </div>
              <!-- Content wrapper -->
          </div>
          <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <div class="modal fade bd-example-modal-xl" id="exampleModal" style="max-width: 90%;margin: 2rem auto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
      <div class="modal-dialog modal-xl" role="document" style="max-width: 90%;margin: 2rem auto">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">ตารางผู้ป่วย</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="card">
              <div id="wrapper"></div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <%-include('../html/script.ejs'); %>
      <script type="module" src="../page-js/pim/page-drughty.js"></script>
  </body>

</html>